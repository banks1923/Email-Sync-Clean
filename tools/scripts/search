#!/usr/bin/env python3
"""
Direct AI-powered search script - no learning curve needed
Usage: scripts/search "your query"
"""

import os
import sys

sys.path.insert(0, os.path.dirname(os.path.dirname(os.path.abspath(__file__))))

from scripts.vsearch import search_emails

if __name__ == "__main__":
    if len(sys.argv) < 2:
        print('Usage: scripts/search "your search query"')
        print('Example: scripts/search "meeting notes"')
        sys.exit(1)

    query = " ".join(sys.argv[1:])
    success = search_emails(query, limit=10, hybrid=True)
    sys.exit(0 if success else 1)
